<% layout('./layouts/layout.eta') %>

<h1 class="text-center p-5">Quiz Topics</h1>

<% if (it.topics && it.topics.length > 0) { %>
<ul style="list-style-type: none;" class="bg-light rounded">
    <% it.topics.forEach(topic => { %>
        <li class="p-3">
            <a style="text-decoration: none;" class="h3" href="/quiz/<%= topic.id %>"><%= topic.name %></a>
        </li>
    <% }) %>
</ul>
<% } else { %>
    <p class="h3">No topics has been added.</p>
<% } %>